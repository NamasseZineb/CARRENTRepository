@model IEnumerable<CARRENT.Models.Voiture>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nouvelle Voiture", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.numéroimmattriculation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateMiseCirculation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeCarburant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrixLocationJournalier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheminImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modele.nommarque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modele.numérosérie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categorie.taille)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>


    <td>
        @Html.DisplayFor(modelItem => item.numéroimmattriculation)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateMiseCirculation)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeCarburant)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PrixLocationJournalier)
    </td>
    <td>
        <img style="width: 250px" src="~/Images/@item.CheminImage" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Modele.nommarque)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Modele.numérosérie)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Categorie.taille)
    </td>
    <td>
        @Html.ActionLink("Modifier", "Edit", new { id = item.VID }, new { @class = "btn btn-primary mt-2" }) |
        @Html.ActionLink("Détails", "Details", new { id = item.VID }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Supprimer", "Delete", new { id = item.VID }, new { @class = "btn btn-success btn-danger" })
    </td>
</tr>
}

</table>
